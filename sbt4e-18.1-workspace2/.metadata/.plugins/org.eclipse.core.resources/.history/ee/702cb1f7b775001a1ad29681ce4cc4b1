#include <stdio.h>
#include <string.h>
#include "system.h"
#include <unistd.h>
#include "system.h"
#include "alt_types.h"
#include "altera_avalon_pio_regs.h"
#include <io.h>
//include "altera_up_avalon_character_lcd.h"

#define ONCHIP_MEMORY2_0_BASE 0x10004000
#define PIO_0_BASE 0x00000000

int main ()
{
printf("Tttt"); //T is the identifier
while (1) // never end loop
{
if (IORD_ALTERA_AVALON_PIO_EDGE_CAP(PIO_0_BASE) == 1)
{
IOWR_ALTERA_AVALON_PIO_EDGE_CAP(PIO_0_BASE, 0x1); // set pio edge true
alt_busy_sleep(10000); // processor delay
printf("Module="); //identifier
printf("%d",IORD(ONCHIP_MEMORY2_0_BASE, 0)); // Read first word
alt_busy_sleep(10000); // processor delay
printf("\r Port="); //identifier
printf("%d",IORD(ONCHIP_MEMORY2_0_BASE, 1)); // Read second word
alt_busy_sleep(10000); // processor delay
printf("\r Data="); //identifier
printf("%X",IORD(ONCHIP_MEMORY2_0_BASE, 2)); // Read third word
printf("\n\r"); //new line
alt_busy_sleep(1000); // processor delay
alt_busy_sleep(300000); // processor delay
}
}
return 0;
}
